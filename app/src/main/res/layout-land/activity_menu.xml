<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Puzzle15.MenuActivity">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/theme"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/best_scores"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/top3scores"/>


            <!-- android:foreground=""-->

        </LinearLayout>

        <Space
            android:layout_width="4dp"
            android:backgroundTint="@color/white"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/theme"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/info"
                android:padding="@dimen/_10sdp"
                android:foreground="?android:selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/infopng"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear"
        android:foreground="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_60sdp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:backgroundTint="@color/theme">
                    <TextView
                        android:id="@+id/easy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="EASY"
                        android:foreground="?android:selectableItemBackground"
                        android:focusable="true"
                        android:clickable="true"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/_20sdp"
                        android:background="#33000000"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/_60sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:gravity="center"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:backgroundTint="@color/theme">
                    <TextView
                        android:id="@+id/medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="MEDIUM"
                        android:foreground="?android:selectableItemBackground"
                        android:focusable="true"
                        android:clickable="true"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:background="#33000000"
                        android:textSize="@dimen/_20sdp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_60sdp"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:backgroundTint="@color/theme">
                    <TextView
                        android:id="@+id/hard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="HARD"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:foreground="?android:selectableItemBackground"
                        android:focusable="true"
                        android:clickable="true"
                        android:textSize="@dimen/_20sdp"
                        android:background="#33000000"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_weight="4">
            <ImageView
                android:id="@+id/aboutus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?android:selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:src="@drawable/whoami2"
                android:paddingBottom="@dimen/_20sdp"/>
            <ImageView
            android:id="@+id/sound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_40sdp"
            android:src="@drawable/imageofsound"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>