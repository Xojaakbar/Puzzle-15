<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Puzzle15.MenuActivity">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:background="@color/color_menu"
        android:layout_height="@dimen/_80sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/best_scores"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:background="@color/color_menu"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/top3scores"/>


               <!-- android:foreground=""-->

        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:backgroundTint="@color/white"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/info"
            android:padding="@dimen/_10sdp"
            android:foreground="?android:selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/infopng"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/_60sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        android:elevation="4dp"
                        app:cardElevation="4dp"
                        android:layout_gravity="bottom"
                        app:cardCornerRadius="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/easy"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:gravity="center"
                            android:text="EASY"
                            android:background="@color/color_menu"
                            android:foreground="?android:selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            android:textColor="@color/text_color"
                            android:textStyle="bold"
                            android:textSize="@dimen/_25sdp"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/_60sdp"
                    android:gravity="center"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        android:elevation="4dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/medium"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:gravity="center"
                            android:text="MEDIUM"
                            android:foreground="?android:selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="@color/color_menu"
                            android:textColor="@color/text_color"
                            android:textStyle="bold"
                            android:textSize="@dimen/_25sdp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_60sdp"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        android:elevation="4dp"
                        android:layout_gravity="top"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/hard"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:gravity="center"
                            android:text="HARD"
                            android:textColor="@color/text_color"
                            android:textStyle="bold"
                            android:background="@color/color_menu"
                            android:foreground="?android:selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            android:textSize="@dimen/_25sdp"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:layout_weight="4">
           <ImageView
               android:id="@+id/sound"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/color_menu"
               android:foreground="?android:selectableItemBackground"
               android:focusable="true"
               android:clickable="true"
               android:padding="@dimen/_18sdp"
               android:src="@drawable/imageofsound"/>
            <Space
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/aboutus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_menu"
                android:foreground="?android:selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:src="@drawable/whoami2"
                android:padding="@dimen/_13sdp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>