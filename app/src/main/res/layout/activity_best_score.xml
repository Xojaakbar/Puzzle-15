<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Puzzle15.BestScoreActivity"
    android:orientation="vertical"
    android:background="#CCCFC8CF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/button_nazad"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_backspace_24"
            android:padding="@dimen/_10sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="60dp"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:text="Best scores"
            android:gravity="start|center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_15"
        android:layout_weight="2">
        <LinearLayout
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hard"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/_30sdp"
                android:background="#B3000000"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/first_hard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:textColor="@color/black"
                android:text="1"
                android:gravity="center|left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_20sdp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/_10sdp"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:src="@drawable/first_place_image"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/second_hard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/black"
                android:text="2"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_20sdp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:src="@drawable/second_place_image"
                android:paddingVertical="@dimen/_10sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/third_hard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/black"
                android:text="3"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:gravity="center|left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_20sdp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:src="@drawable/img_7"
                android:padding="@dimen/_10sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_15"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Medium"
                android:layout_margin="2dp"
                android:background="#B3000000"
                android:textSize="@dimen/_25sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/first_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/black"
                android:text="1"
                android:gravity="center|left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_20sdp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/_10sdp"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:src="@drawable/first_place_image"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/second_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:textColor="@color/black"
                android:text="2"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_20sdp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:src="@drawable/second_place_image"
                android:paddingVertical="@dimen/_10sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/third_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:textColor="@color/black"
                android:text="3"
                android:gravity="center|left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_20sdp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:src="@drawable/img_7"
                android:padding="@dimen/_10sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_15"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Easy"
                android:layout_margin="2dp"
                android:background="#B3000000"
                android:textSize="@dimen/_25sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/first_easy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:textColor="@color/black"
                android:text="1"
                android:gravity="center|left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_20sdp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/first_place_image"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/second_easy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:text="2"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_20sdp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:src="@drawable/second_place_image"
                android:paddingVertical="@dimen/_10sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/third_easy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/black"
                android:text="3"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:gravity="center|left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_20sdp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:background="#D9FFFFFF"
                android:src="@drawable/img_7"
                android:padding="@dimen/_10sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>