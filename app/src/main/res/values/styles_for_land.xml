<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GameItem_for_land">

       <!-- <item name="android:background">@color/color_item</item>-->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:shadowColor">#F8F5F5</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/back_button</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">1dp</item></style>


